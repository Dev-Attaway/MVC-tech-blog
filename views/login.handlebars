<!-- Container for the login form -->
<div
  class='container max-w-md mx-auto xl:max-w-3xl flex rounded-lg overflow-hidden justify-center content-center shadow-lg bg-paleGreen dark:bg-slateGray'
>

  <!-- Form section -->
  <div class='w-full xl:w-1/2 p-8'>
    <!-- Login form -->
    <form id='login-form' method='post' action='#'>
      <!-- Title of the form -->
      <h1 class='text-2xl font-bold dark:text-ghostWhite'>Login to your account</h1>

      <!-- Link to sign up -->
      <div>
        <span class='text-gray-600 text-sm dark:text-ghostWhite'>
          Don't have an account?
        </span>
        <a href='/signup' class='text-info text-sm font-semibold'>Sign up</a>
      </div>

      <!-- Username input field -->
      <div class='mb-4 mt-6'>
        <label
          class='block dark:text-ghostWhite text-sm font-semibold mb-2'
          htmlFor='username'
        >
          Username
        </label>
        <input
          class='text-sm appearance-none rounded-full w-full border py-2 px-3 dark:text-darkGray dark:bg-ghostWhite leading-tight focus:outline-none focus:shadow-outline h-10'
          id='username-login'
          type='text'
          placeholder='Your username address'
        />
      </div>

      <!-- Password input field -->
      <div class='mb-6 mt-6'>
        <label
          class='block dark:text-ghostWhite text-sm font-semibold mb-2'
          htmlFor='password'
        >
          Password
        </label>
        <input
          class='text-sm bg-gray-200 appearance-none rounded-full border w-full py-2 px-3 dark:text-darkGray dark:bg-ghostWhite mb-1 leading-tight focus:outline-none focus:shadow-outline h-10'
          id='password-login'
          type='password'
          placeholder='Your password'
        />
      </div>

      <!-- Login button -->
      <div class='flex w-full mt-8'>
        <button
          class='w-full bg-teal text-sm py-2 px-4 font-semibold hover:scale-105 rounded-full border-teal dark:text-ghostWhite dark:bg-lightpink focus:outline-none focus:shadow-outline h-10'
          type='sumbit'
        >
          Log In
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Script for handling login functionality -->
<script src='./js/login.js'></script>