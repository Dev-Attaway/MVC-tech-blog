<link
  rel='stylesheet'
  href='https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css'
/>

<div class='bg-gray-100 p-6 m-4'>

  <form id='edit-post-form' class='card-body'>
    <input type='hidden' name='post-id' value='{{id}}' />

    <label class='form-label' for='post-title'>Title</label>
    <input type='text' name='post-title' value='{{title}}' class='form-input' />

    <label class='form-label' for='post-body'>Content</label>
    <textarea name='post-body' class='form-input'>{{description}}</textarea>

    <button type='submit' id='#edit-post-form' class='btn'>Update</button>

    <button type='button' id='delete-btn' class='btn'>Delete</button>
  </form>
</div>

<script src='/js/editPost.js'></script>